@model IEnumerable<LimatamboAdmin.Models.Especialidad>

@{
    ViewBag.Title = LimatamboAdmin.Models.Especialidad.getNombrePlural();
}

<h2 class="title">@Html.Raw(LimatamboAdmin.Models.Especialidad.getNombrePlural())</h2>

<p class="content-btn-add">
    <a class="btn btn-success" href="@Url.Action("Create")">
        Nueva @Html.Raw(LimatamboAdmin.Models.Especialidad.getNombre())
        <i class="fas fa-plus"></i>
    </a>
</p>

<table class="table">
    <tr class="table-header">
        <th>
            @Html.DisplayNameFor(model => model.ID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.nombre)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.imagen)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.imagenVector)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
<tr>
    <td>
        @Html.ActionLink(@Html.DisplayFor(modelItem => item.ID).ToString(), "Details", new { id = item.ID })
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.nombre)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.imagen)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.imagenVector)
    </td>
    <td>
        <a class="btn btn-info" href="@Url.Action("Edit", new { id = item.ID })">
            <i class="fas fa-pen"></i>
        </a>
        <a class="btn btn-danger" href="@Url.Action("Delete", new { id = item.ID })">
            <i class="fas fa-trash"></i>
        </a>
    </td>
</tr>
    }

</table>
